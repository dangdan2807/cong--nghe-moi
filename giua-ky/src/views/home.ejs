<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Trang chu</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <div class="d-flex justify-content-center">
            <div>
                <h1>Danh sach san pham</h1>
                <a class="btn btn-primary me-2 mb-2" href="/add" role="button">them san pham</a>
                <% if(status !== undefined) { %>
                <div
                    class="alert alert-<% if(status == 'true') { %>success <% } else if (status == 'false') {%>danger <% } %>"
                    role="alert"
                >
                    <%= message %>
                </div>
                <% } %>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">ma san pham</th>
                            <th scope="col">ten san pham</th>
                            <th scope="col">so luong</th>
                            <th scope="col">hinh anh</th>
                            <th scope="col">hanh dong</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sanPhams.forEach((item, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= item.ma_sp %></td>
                            <td><%= item.ten_sp %></td>
                            <td><%= item.so_luong %></td>
                            <td>
                                <img
                                    src="<%= item.image %>"
                                    alt=""
                                    class="img-thumbnail"
                                    style="width: 9rem"
                                />
                            </td>
                            <td>
                                <div class="d-flex">
                                    <a
                                        class="btn btn-primary me-2"
                                        href="/update/<%= item.ma_sp %>"
                                        role="button"
                                        >Cap nhat</a
                                    >
                                    <form action="/delete" method="post">
                                        <input
                                            type="hidden"
                                            name="ma_sp"
                                            value="<%= item.ma_sp %>"
                                        />
                                        <button
                                            type="submit"
                                            class="btn btn-danger"
                                            onclick="if(!(confirm('ban muon xoa san pham nay?'))) return false;"
                                        >
                                            Xo√°
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
