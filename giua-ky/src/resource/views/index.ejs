<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous" />
</head>

<body>
    <div>
        <h3 class="text-center">Danh sach san pham</h3>
    </div>
    <div class="d-flex justify-content-center">
        <a class="btn btn-primary" href="/add" role="button">Them san pham</a>
    </div>
    <div class="d-flex justify-content-center mt-2">
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ma san pham</th>
                        <th scope="col">ten san pham</th>
                        <th scope="col">so luong</th>
                        <th scope="col">hinh anh</th>
                        <th scope="col">Hanh dong</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(item=> { %>
                        <tr>
                            <td>
                                <%= item.ma_sp %>
                            </td>
                            <td>
                                <%= item.ten_sp %>
                            </td>
                            <td>
                                <%= item.so_luong %>
                            </td>
                            <td>
                                <img src="<%= item.image %>" class="img-thumbnail" alt="...">
                            </td>
                            <td>
                                <div class="d-flex">

                                    <a class="btn btn-primary me-2" href="/<%= item.ma_sp %>" role="button">cap nhat</a>
                                    <form action="/delete" method="POST">
                                        <input type="hidden" name="ma_sp" value="<%= item.ma_sp %>">
                                        <button type="submit" class="btn btn-danger">Xoa</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
</body>

</html>