<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>

<body>
    <div class="d-flex justify-content-center">
        <div>
            <form action="/" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="ma_sp" class="form-label">Mã sản phẩm</label>
                    <input type="number" name="ma_sp" class="form-control" id="ma_sp" placeholder="Nhập mã sản phẩm"
                        required>
                </div>
                <div class="mb-3">
                    <label for="ten_sp" class="form-label">Tên sản phẩm</label>
                    <input type="text" name="ten_sp" class="form-control" id="ten_sp" placeholder="Nhập tên sản phẩm"
                        required>
                </div>
                <div class="mb-3">
                    <label for="so_luong" class="form-label">Số lượng</label>
                    <input type="number" name="so_luong" class="form-control" id="so_luong" value="1"
                        placeholder="Nhập số lượng sản phẩm" required>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-3">Thêm</button>
                </div>
            </form>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Mã SP</th>
                        <th scope="col">Tên SP</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Hình ảnh</th>
                        <th scope="col">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% sanPhams.forEach(function(item, index) { %>
                    <tr>
                        <th scope="row">
                            <%= item.ma_sp %>
                        </th>
                        <td>
                            <%= item.ten_sp %>
                        </td>
                        <td>
                            <%= item.so_luong %>
                        </td>
                        <td></td>
                        <td>
                            <div class="d-flex d-flex align-items-start">
                                <a class="btn btn-primary me-2" href="/<%= item.ma_sp %>" role="button">Cập nhật</a>
                                <form action="/delete" method="post" enctype="multipart/form-data">
                                    <input type="hidden" name="ma_sp" class="form-control" id="ma_sp"
                                        value="<%= item.ma_sp %>">
                                    <button type="submit" class="btn btn-danger mb-3">Xoá</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous">
    </script>
</body>

</html>